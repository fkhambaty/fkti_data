        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>
    <style name="FKTIText.Subtitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_medium</item>
