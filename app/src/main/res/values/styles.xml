<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- Base application theme -->
    <style name="Theme.FKTILearningHub" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_blue_dark</item>
        <item name="colorOnPrimary">@color/text_white</item>
        
        <item name="colorSecondary">@color/accent_green</item>
        <item name="colorSecondaryVariant">@color/accent_orange</item>
        <item name="colorOnSecondary">@color/text_white</item>
        
        <item name="android:colorBackground">@color/background_white</item>
        <item name="colorOnBackground">@color/text_dark</item>
        
        <item name="colorSurface">@color/surface_white</item>
        <item name="colorOnSurface">@color/text_dark</item>
        
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/text_white</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/primary_blue_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/primary_blue_dark</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>
    
    <!-- Splash screen theme -->
    <style name="SplashTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@color/primary_blue</item>
        <item name="android:navigationBarColor">@color/primary_blue</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>
    
    <!-- App bar theme -->
    <style name="Theme.FKTILearningHub.AppBarOverlay" parent="ThemeOverlay.Material3.ActionBar" />
    
    <!-- Popup theme -->
    <style name="Theme.FKTILearningHub.PopupOverlay" parent="ThemeOverlay.Material3" />
    
    <!-- Button styles -->
    <style name="FKTIButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary_blue</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="FKTIButton.Secondary">
        <item name="backgroundTint">@color/accent_green</item>
    </style>
    
    <!-- Text styles -->
    <style name="FKTIText">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>
    
    <style name="FKTIText.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/primary_blue</item>
    </style>
    
    <style name="FKTIText.Subtitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_medium</item>
    </style>
    
    <style name="FKTIText.Body">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>
    
    <!-- Card styles -->
    <style name="FKTICard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardBackgroundColor">@color/surface_white</item>
    </style>
    
</resources>
